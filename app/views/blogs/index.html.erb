<h1>ブログ一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
    <th colspan="3"></th>
  </tr>
<% @blogs.each do |blog| %>
  <%# binding.pry %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <% if blog.image.present? %>
      <td><%= image_tag blog.image.url %></td>
    <% end %>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <%# if blog.user_id == current_user.id %>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id) %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: {confirm: '削除しますか？' } %></td>
    <%# end %>
  </tr>

<% end %>
</table>
<br>
<%= link_to '新しくブログを投稿する', new_blog_path %>